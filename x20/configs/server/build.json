{
    "name": "build",
    "binary_name": "build_server",
    "priority": 100,
    "environment": "server",
    "long_running": true,
    "arguments": {
        "weld_hostname": "weld",
        "port": 8008,
        "auth_token": "SECRETS::secret_key"
    },
    "docker_arguments": [
        "--init",
        "--privileged",
        "--mount", "type=bind,source=/mnt/stateful_partition/cache,target=/cache",
        "-v", "/home/colin/bazel-access.json:/data/bazel-access.json:ro",
        "-v", "/home/colin/id_rsa:/root/.ssh/id_rsa:ro",
        "-v", "/home/colin/id_rsa.pub:/root/.ssh/id_rsa.pub:ro",
        "-e", "RUST_BACKTRACE=1"
    ]
}
